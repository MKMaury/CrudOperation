@model PieInfo.Models.ViewModel.CategoryVM

<div class="container p-4">
        <div class="row p-3">
            <div class="col-6">
            <h2 class="text-primary">Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="CreateUpdate" asp-controller="Category"><i class="bi bi-plus-circle-fill"></i>&nbsp; Creaet New Category</a>
        </div>
        </div>
    </div>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Category Name </th>
            <th>Display Order </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.categories)
        {
        <tr>
            <td>@category.Name</td>
            <td>@category.DisplayOrder</td>
                <td role="group">
                    <a asp-action="CreateUpdate" asp-controller="Category" asp-route-id="@category.Id"><i class="bi bi-pencil-fill"></i></a>&nbsp;
                    <a asp-action="Delete" asp-controller="Category" asp-route-id="@category.Id"><i class="bi bi-trash-fill"></i></a>
                    </td>
        </tr>
        }
    </tbody>
</table>

